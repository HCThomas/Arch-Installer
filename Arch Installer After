#!/bin/bash

### AUR Yay ###
cd ~
git clone https://aur.archlinux.org/yay.git
cd yay
makepkg -si
cd ~

### Clone dotfiles ###
cd ~
git init
git remote add origin https://github.com/HCThomas/dotfiles
git fetch
git checkout -ft origin/master

### Install Window Manger, Desktop Enviornment, Applications ###
sudo pacman -S xorg-server xorg-xinit xorg-xrandr arandr xdg-user-dirs bluez bluez-utils pulseaudio pulseaudio-alsa pulseaudio-bluetooth ntfs-3g \
termite ranger w3m vlc code p7zip jdk-openjdk keepassxc steam discord calibre qbittorrent

yay -S brave-bin gotop libxft-bgra-git hakuneko-desktop nordvpn-bin gkraken

xdg-user-dirs-update
sudo systemctl enable bluetooth
sudo systemctl enable nordvpnd
sudo gpasswd -a holden nordvpn

# i3
echo -en "1.\tYes\n0.\tNo\nInstall i3: "
read iI3
if [ "$iI3" == "" ]; then echo "Can't be empty!"; exit 1; fi
if [ $iI3 -eq 1 ]; then
sudo pacman -S i3-gaps i3blocks i3lock noto-fonts noto-fonts-emoji ttf-font-awesome pamixer alsa-utils brightnessctl playerctl notification-daemon picom xss-lock feh dmenu
echo -e "[D-BUS Service]\nName=org.freedesktop.Notifications\nExec=/usr/lib/notification-daemon-1.0/notification-daemon" | sudo tee -a /usr/share/dbus-1/services/org.freedesktop.Notifications.service
fi

# DKE
echo -en "1.\tYes\n0.\tNo\nInstall KDE: "
read iKDE
if [ "$iKDE" == "" ]; then echo "Can't be empty!"; exit 1; fi
# KDE
if [ $iKDE -eq 1 ]; then
sudo pacman -S plasma konsole yakuake dolphin
sudo systemctl enable sddm
mkdir -p ~/.local/share/kglobalaccel
fi

### Install Vim Plugins ###
vim -c PlugInstall -c q -c q .vimrc

echo "rm install, reboot"
